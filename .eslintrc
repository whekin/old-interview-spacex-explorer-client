{
  "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "plugins": [
    "import",
    "jest"
  ],
  "rules": {
    "semi": ["error", "always"],
    "linebreak-style": ["error", "unix"],
    "indent": ["error", 2],
    "object-curly-spacing": ["error", "always"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  }
}